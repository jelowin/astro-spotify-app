---
import { Image } from 'astro:assets';

const { height, name, url, width} = Astro.props
---

<article>
  <Image src={url} alt={name} width={width} height={height} />
  <h3>{name}</h3>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 200px;
  }

  h3 {
    width: 200px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  img {
    display: block;
    border-radius: 8px;
    height: 100%;
    max-width: 100%;
    object-fit: cover;
    cursor: pointer;
  }
</style>